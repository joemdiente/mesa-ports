{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run GDBServer in Target",
            "command": "cd mepa_app_sama7/build && make && ../transfer_to_dut.sh debug", 
            "type": "shell",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".", 
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting server.*", 
                    "endsPattern": "^.*Listening on port 9999.*" 
                }
            }
        }
    ]
}